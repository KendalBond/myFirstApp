using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace myFirstApp

{



    /* Success in defining the GameRound class and implementing it in Main(). Yay!

     * Next step is to read in a (delimited) array of: mod, min, max; and output an array of outcomes.

     * Followed by reading in an array and computing a result for a single, specific record.*/



    class Program

    {

        static void Main(string[] args)

        {

            Player playerA = new Player();

            string plrName = playerA.GetName();
            string plrTeam = playerA.GetTeam();
            int plrSkill = playerA.GetSkill();
            int plrMod = playerA.GetModifier();

            GameRound round1 = new GameRound();

            int roll = round1.RandomNumber(plrSkill);

            int total = round1.ResolvePlay(roll, plrMod);

            Console.WriteLine("\nPlay outcome for {0} ({1}) is {2}.", plrName, plrTeam, total);

            Console.Read();
        }


    }

    class GameRound

    {

        public int RandomNumber(int maxRoll)

        {

           /* Console.WriteLine("\nEnter roll maximum: ");

            int maxRoll = Convert.ToInt32(Console.ReadLine());
            */
            Random rand = new Random();

            int roll = rand.Next(1, maxRoll);

            return roll;

        }



        public int GetModifier()

        {

            Console.WriteLine("Enter modifier value: ");

            int plrMod = Convert.ToInt32(Console.ReadLine());

            return plrMod;



        }



        public int ResolvePlay(int plrMod, int plrRoll)

        {

            int result = plrMod + plrRoll;

            return result;

        }

    }

    class Player
    {
        string playerName, playerTeam;
        int playerSkill, playerModifier;
        public string GetName()
        {
            Console.WriteLine("\nEnter player name: ");
            string playerName = Console.ReadLine();
            return playerName;
        }

        public string GetTeam()
        {
            Console.WriteLine("\nEnter player team: ");
            string playerTeam = Console.ReadLine();
            return playerTeam;
        }

        public int GetSkill()
        {
            Console.WriteLine("\nEnter player skill: ");
            int playerSkill = Convert.ToInt32(Console.ReadLine());
            return playerSkill;
        }

        public int GetModifier()
        {
            Console.WriteLine("\nEnter player modifier: ");
            int playerModifier = Convert.ToInt32(Console.ReadLine());
            return playerModifier;
        }
    }

}
